package hu.vizoli.tddkata.lcddigits.util 
{
	/**
	 * Utils of Math.
	 * 
	 * @author vizoli
	 */
	public class MathUtil 
	{
		
		/**
		 * Returns true if the given number is positive otherwise false.
		 * 
		 * @param	number
		 * @return
		 */
		public static function isPositiveNumber( number:Number ):Boolean
		{
			return number >= 0 ? true : false;
		}
		
	}

}